@model List<CondominiumWebApp.Models.User>
@{
    Layout = "_Login_Layout";
}

@{
    ViewData["Title"] = "User List";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Ingresar</h2>
                    <form asp-controller="User" asp-action="Details" method="post">
                        <div class="form-group">
                            <label for="email">Usuario:</label>
                            <input type="text" name="email" class="form-control" placeholder="Nombre de usuario o correo" />
                        </div>

                        <div class="form-group">
                            <label for="password">Contraseña:</label>
                            <input type="password" name="password" class="form-control" />
                        </div>

                        <button type="submit" class="btn btn-primary">Login</button>
                    </form>

                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger mt-2">@ViewBag.ErrorMessage</div>
                    }

                    @if (ViewBag.LoginSuccess != null)
                    {
                        <div class="alert alert-success mt-2">Login successful!</div>
                    }

                    <div class="mt-3 text-center">
                        <p>¿Aún no tienes una cuenta?</p>
                        <a href="@Url.Action("Create", "User")" class="btn btn-secondary">Registrarse</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
