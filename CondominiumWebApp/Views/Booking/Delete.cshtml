@model CondominiumWebApp.Models.Booking

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>Seguro que desea eliminar esta reserva?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Area
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookingPlace)
        </dd>
        <dt class = "col-sm-2">
            Dia
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookingDay)
        </dd>
        <dt class = "col-sm-2">
            Hora
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookingTime)
        </dd>
        <dt class = "col-sm-2">
            Responsable
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookingName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="BookingId" />
        <input type="submit" value="Eliminar" class="btn btn-danger mt-3" /> |
        <a asp-action="Index">Regresar</a>
    </form>
</div>
