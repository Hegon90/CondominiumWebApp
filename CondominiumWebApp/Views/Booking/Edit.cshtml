@model CondominiumWebApp.Models.Booking

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Reserva</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookingId" />
            <div class="form-group">
                <label asp-for="BookingPlace" class="control-label"></label>
                <select asp-for="BookingPlace" class="form-control">
                    <option>Piscina</option>
                    <option>Gimnasio</option>
                    <option>Salon Comunal</option>
                    <option>Cancha</option>
                </select>
                <span asp-validation-for="BookingPlace" class="text-danger" required></span>
            </div>
            <div class="form-group">
                <label asp-for="BookingDay" class="control-label"></label>
                <select asp-for="BookingDay" class="form-control">
                    <option>Lunes</option>
                    <option>Martes</option>
                    <option>Miercoles</option>
                    <option>Jueves</option>
                    <option>Viernes</option>
                    <option>Sabado</option>
                    <option>Domingo</option>
                </select>
                <span asp-validation-for="BookingDay" class="text-danger" required></span>
            </div>
            <div class="form-group">
                <label asp-for="BookingTime" class="control-label"></label>
                <select asp-for="BookingTime" class="form-control">
                    <option>08:00</option>
                    <option>10:00</option>
                    <option>12:00</option>
                    <option>14:00</option>
                    <option>16:00</option>
                    <option>18:00</option>
                    <option>20:00</option>
                </select>
                <span asp-validation-for="BookingTime" class="text-danger" required></span>
            </div>
            <div class="form-group">
                <label asp-for="BookingName" class="control-label"></label>
                <input asp-for="BookingName" class="form-control" />
                <span asp-validation-for="BookingName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
