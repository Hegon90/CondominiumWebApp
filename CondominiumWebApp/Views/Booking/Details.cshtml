@model CondominiumWebApp.Models.Booking

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles de la Reserva</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Area
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookingPlace)
        </dd>
        <dt class = "col-sm-2">
            Dia
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookingDay)
        </dd>
        <dt class = "col-sm-2">
            Hora
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookingTime)
        </dd>
        <dt class = "col-sm-2">
            Responsable
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookingName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.BookingId">Editar</a> |
    <a asp-action="Index">Regresar</a>
</div>
