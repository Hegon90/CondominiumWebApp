@model CondominiumWebApp.Models.Property

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Propiedad</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Codigo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PropertyPasscode)
        </dd>
        <dt class = "col-sm-2">
            Categoria
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PropertyType)
        </dd>
        <dt class = "col-sm-2">
            Fecha de Creacion
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PropertyDate)
        </dd>
        <dt class = "col-sm-2">
            Bloque
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Block.BlockName)
        </dd>
        <dt class = "col-sm-2">
            Calle
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Street.StreetNumber)
        </dd>
        <dt class = "col-sm-2">
            Numero
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PropertyNumber)
        </dd>
        <dt class="col-sm-2">
            Propietario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Owner.OwnerFullName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.PropertyId">Editar</a> |
    <a asp-action="Index">Regresar</a>
</div>
