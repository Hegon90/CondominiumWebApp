@model CondominiumWebApp.Models.Property

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>Seguro desea eliminar esta propiedad?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Codigo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PropertyPasscode)
        </dd>
        <dt class = "col-sm-2">
            Categoria
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PropertyType)
        </dd>
        <dt class = "col-sm-2">
            Fecha
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PropertyDate)
        </dd>
        <dt class = "col-sm-2">
            Bloque
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Block.BlockName)
        </dd>
        <dt class = "col-sm-2">
            Calle
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Street.StreetNumber)
        </dd>
        <dt class = "col-sm-2">
            Numero
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PropertyNumber)
        </dd>
        <dt class="col-sm-2">
            Propietario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Owner.OwnerFullName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PropertyId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar</a>
    </form>
</div>
