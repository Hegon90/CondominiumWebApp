@model CondominiumWebApp.Models.PropertyEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Propiedad</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PropertyId" />

            <div class="form-group">
                <label asp-for="PropertyPasscode" class="control-label"></label>
                <input asp-for="PropertyPasscode" class="form-control" type="text" readonly required/>
                <span asp-validation-for="PropertyPasscode" class="text-danger" required></span>
            </div>
            <div class="form-group">
                <label asp-for="PropertyType" class="control-label"></label>
                <select asp-for="PropertyType" class="form-control" required>
                    <option></option>
                    <option>Casa</option>
                    <option>Lote</option>
                    <option>Piscina</option>
                </select>
                <span asp-validation-for="PropertyType" class="text-danger" required></span>
            </div>
            <div class="form-group">
                <label asp-for="OwnerId" class="control-label"></label>
                @Html.DropDownList("OwnerId", ViewBag.Owners as SelectList, "", new { @class = "form-control", @required = "required" })
            </div>
            <div class="form-group">
                <label asp-for="PropertyDate" class="control-label"></label>
                <input asp-for="PropertyDate" class="form-control" type="date" required/>
                <span asp-validation-for="PropertyDate" class="text-danger" required></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
